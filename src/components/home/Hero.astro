---
import Typography from '@/components/ui/Typography.astro'
import GithubIcon from '@/components/icons/Github.astro'
import LinkedInIcon from '@/components/icons/LinkedIn.astro'
import MessageIcon from '@/components/icons/Message.astro'

import { getLangFromUrl, useTranslations } from '@/i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section class='flex justify-between gap-10'>
  <div class='flex flex-col justify-between'>
    <Typography as='h1' variant='h3' color='black'>
      Sergio Zabala Muñoz
    </Typography>
    <Typography as='h2' variant='p' color='black' class='text-balance text-sm'>
      {t('hero.description')}
    </Typography>
    <div>
      <ul class='text-sm flex gap-2'>
        <li>
          <a
            href='mailto:sergio.zabala@gmail.com'
            class='hover:scale-110 transition-all block border-2 border-gray-800 dark:border-gray-100 rounded-md p-1'
            aria-label={t('hero.mail.arialabel') as string}
          >
            <MessageIcon size={16} />
          </a>
        </li>
        <li>
          <a
            href='https://linkedin.com/in/sergio-zabala-muñoz'
            target='_blank'
            rel='noopener noreferrer'
            class='hover:scale-110 transition-all block border-2 border-gray-800 dark:border-gray-100 rounded-md p-1'
            aria-label={t('hero.linkedin.arialabel') as string}
          >
            <LinkedInIcon size={16} />
          </a>
        </li>
        <li>
          <a
            href='https://github.com/kyubiful'
            target='_blank'
            rel='noopener noreferrer'
            class='hover:scale-110 transition-all block border-2 border-gray-800 dark:border-gray-100 rounded-md p-1'
            aria-label={t('hero.github.arialabel') as string}
          >
            <GithubIcon size={16} />
          </a>
        </li>
      </ul>
    </div>
  </div>
  <img
    src='/sergio.webp'
    class='size-32 rounded-md aspect-square border-2 border-gray-800 dark:border-gray-100 shadow-borderBlack dark:shadow-borderWhite'
    alt='Sergio Zabala Muñoz'
  />
</section>
