---
import { useTranslatedPath, getLangFromUrl, getCurrentUrl } from '@/i18n/utils'
const lang = getLangFromUrl(Astro.url)
const trangraydPath = useTranslatedPath(lang)
const url = getCurrentUrl(Astro.url)
---

{
  lang === 'en' ? (
    <a href={trangraydPath(url, 'es')}>EN</a>
  ) : (
    <a href={trangraydPath(url, 'en')}>ES</a>
  )
}
